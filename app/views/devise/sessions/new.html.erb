<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-outline mb-4">
    <%= f.label :email , class: "form-label"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control m-2 w-50"%>
  </div>

  <div class="form-outline mb-4">
    <%= f.label :password , class: "form-label"%><br />
    <%= f.password_field :password, autocomplete: "current-password"  , class: "form-control m-2 w-50"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me , class: "form-label"%>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" , class: "btn btn-primary btn-block mb-4"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
