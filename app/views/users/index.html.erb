<section class="container">
  <% @users.each do |user| %>
    <div class="user-box">
      <img class="image-user" src=<%= user.photo %> alt="user">
      <div class="user-info">
        <p class="user-name"><%= user.name %></p>
        <p class="user-post">Number of posts: <%= user.posts_counter || 0%></p>
      </div>
    </div>
  <% end %>
</section>