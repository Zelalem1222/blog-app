<section class="container">
  <div class="user-box">
    <img class="image-user" src=<%= @user.photo %> alt="user"/>
    <div class="user-info">
      <p class="user-name"><%= @user.name %></p>
      <p class="user-post">Number of posts: <%= @user.posts_counter%></p>
    </div>
  </div>
  <p class="user-bio"><%= @user.bio %></p>
  <% @user.most_recent_post.each do |post| %>
    <%= link_to user_post_path(@user.id, post.id) do %>
      <div class="user-recent-post">
        <p class="post-title"><strong>Post</strong> : <%= post.title %></p>
        <p class="post-text"><%= post.text %></p>
        <h3 class="counters">Comments: <%= post.comments_counter %>
          Likes: <%= post.likes_counter %>
          <h3>
          </div>
        <% end %>
      <% end %>
      <div class="button-user">
        <button class="btn btn-info">
          <%= link_to "See all posts", user_posts_path(@user) %>
        </button>
      </div>
    </section>
